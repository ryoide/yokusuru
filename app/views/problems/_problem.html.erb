<section class="col-md-12">
  <br />
  <div class="sct_inner">
  	<div class="profile">
  		<div class="image">
  			<img src="<%= problem.user.avatar.url(:medium) %>"　width="50" height="50">
  		</div>
  		<div class="intro">
  			<span><%= link_to problem.user.name, user_path(problem.user) %></span>
  			<time><%= time_ago_in_words problem.updated_at %>前</time>
  		</div>
  	</div>
    <p><span class="left"><%= problem.problem %></span><span class="right"><%= problem.plan %></span></p>
  </div> 
</section>