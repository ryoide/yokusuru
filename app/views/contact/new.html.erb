<div class="col-lg-12">
  <%= form_for @contact, url: contact_index_path do |f| %>
    <h2>お問い合わせ</h2>
      <div class="form-group"> 
        <div class="col-lg-12">
          <br />お名前 <%= f.text_field :name, placeholder: '必須' %>
        </div> 
        <div class="col-lg-12">
          <br />E-Mail <%= f.text_field :mail, placeholder: '必須' %>
        </div>
        <div class="col-lg-12">
          <br />件名 <%= f.text_field :subject, placeholder: '必須' %>
        </div>
        <div class="col-lg-12">
          <br />内容 <%= f.text_field :content, placeholder: '必須' %>
        </div>
        <div class="col-lg-12">
          <br /><%= f.submit "送信", :class => 'btn btn-primary withripple' %>
        </div>
      </div>
  <% end %>
</div>